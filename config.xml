<?xml version='1.0' encoding='utf-8'?>
<widget id="js.wot.car" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>J5 Car Demo</name>
    <description>
        A sample Apache Cordova application that connects arduino car using Johnny Five via BLE.
    </description>
    <author email="elin@mozilla.org" href="http://github.com/elin-moco/">
      Eddie Lin
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~3.9.1" />
    <engine name="android" spec="~4.1.1" />
    <!-- latest experimental build, change this if things breaks -->
    <engine name="firefoxos" spec="https://github.com/apache/cordova-firefoxos" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="org.apache.cordova.console" spec="~0.2.13" />
    <plugin name="cordova-plugin-ble-central" spec="~1.0.0" />
    <hook src="scripts/bower_install.js" type="before_prepare" />
</widget>
